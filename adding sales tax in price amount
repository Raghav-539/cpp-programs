// write a program to add an 8% sales tax to a given amount
// formula (amount + (amount*(percentage_to_add/100)))

#include <iostream>
using namespace std;
 
int main()
{
    int amount;
    float final_amount;

    cout << "enter the amount : " ;
    cin >> amount;
    final_amount = amount + (amount*0.08) ;
    
    cout << "final amount after adding 8 percent tax is : " << final_amount << endl;

    return 0;

}
